{
	"name": "Thumbnail Grabber",
	"version": "1.5.3",
	"description": "Download thumbnails and covers from YouTube, SoundCloud, Spotify, YouTube Music and more",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"dev-firefox": "TARGET=firefox vite dev",
		"build": "vite build && TARGET=firefox vite build && node ./zip.js",
		"format": "biome check --write src *.js",
		"check": "biome ci src *.js"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.2",
		"@types/chrome": "^0.0.268",
		"@types/firefox-webext-browser": "^120.0.4",
		"typescript": "^5.5.3",
		"vite": "^5.3.3",
		"vite-plugin-web-extension": "^4.1.4",
		"zip-local": "^0.3.5"
	}
}
